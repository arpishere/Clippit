<script>
const chat=document.getElementById("chat");
const input=document.getElementById("input");
const sendBtn=document.getElementById("send");
const statusEl=document.getElementById("status");
const clippy=document.getElementById("clippy");

const personalityImages={
  clippy:"https://www.rickstreeper.com/clippy/Clippy.png",
  professor:"https://www.rickstreeper.com/clippy/Clippy-Professor.png",
  joker:"https://www.rickstreeper.com/clippy/Clippy-Joker.png"
};

document.getElementById("personality").onchange=e=>{
  clippy.src=personalityImages[e.target.value];
};

const history=[];

function addMsg(role,text){
  const d=document.createElement("div");
  d.className=`msg ${role}`;
  d.textContent=(role==="user"?"You: ":"Clippy: ")+text;
  chat.appendChild(d);
  chat.scrollTop=chat.scrollHeight;
}

function setStatus(t){statusEl.textContent=t;}

async function send(){
  const text=input.value.trim();
  if(!text)return;
  input.value="";
  addMsg("user",text);
  history.push(text);
  setStatus("Thinkingâ€¦");
  animate("wiggle");

  try{
    const reply=await gemini(text);
    addMsg("clippy",reply);
    animate(reply.includes("!")?"jump":"wiggle");
  }catch{
    addMsg("clippy","âš ï¸ Gemini API error");
  }
  setStatus("Ready");
}

sendBtn.onclick=send;
input.onkeydown=e=>e.key==="Enter"&&send();

async function gemini(prompt){
  const key=document.getElementById("apiKeySelect").value;
  const personality=document.getElementById("personality").value;

  const system=`You are Microsoft Clippy.
Personality: ${personality}
Be helpful, fun, concise.`;

  const res=await fetch(
    `https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent?key=${key}`,
    {
      method:"POST",
      headers:{"Content-Type":"application/json"},
      body:JSON.stringify({
        contents:[{
          role:"user",
          parts:[{text:system+"\n\n"+history.join("\n")+"\nUser: "+prompt}]
        }],
        generationConfig:{temperature:.8,maxOutputTokens:300}
      })
    }
  );

  const data=await res.json();
  return data.candidates[0].content.parts[0].text;
}

function animate(cls){
  clippy.classList.add(cls);
  setTimeout(()=>clippy.classList.remove(cls),400);
}

addMsg("clippy","Hi! Iâ€™m Clippy â€” powered by Gemini ðŸ¤–");

</script>
